{
  "manifest_version": 3,
  "name": "Destimulate YT",
  "version": "2.0",
  "description": "Blocks out all tools YouTubeâ„¢ uses to keep you hooked, such as thumbnails, comments, recommendations, endscreens, shorts, and more",
  "action": {
    "default_icon": {
      "16": "Resources/logo-16x16.png",
      "48": "Resources/logo-48x48.png",
      "128": "Resources/logo-128x128.png"
    },
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "varStorage.js",
        "inject.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "Resources/logo-16x16.png",
    "48": "Resources/logo-48x48.png",
    "128": "Resources/logo-128x128.png"
  },
  "options_ui": {
    "page": "index.html",
    "browser_style": true
  },
  "permissions": [
    "scripting",
    "storage"
  ]
}